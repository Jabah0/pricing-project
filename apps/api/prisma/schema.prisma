generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}
model User {
  id                Int       @default(autoincrement()) @id
  fullName          String
  username          String    @unique
  password          String
  role              Role     @default(USER)
  createDate        DateTime  @default(now())
  updatedDate       DateTime  @updatedAt
  lastLogin         DateTime?
  hashRefreshToken  String
  medservcies       UserMedServices[]
}

model MedService {
  id                String  @id
  name              String
  dalilName         String
  code              String
  nationalCode      String
  price             Float
  unitSize          Int
  numberOfPricing   Int     @default(0)
  users             UserMedServices[]
}

model UserMedServices {
  medServiceId      String
  medService        MedService  @relation(fields: [medServiceId], references: [id])
  userId            Int
  user              User        @relation(fields: [userId], references: [id])
  createDate        DateTime    @default(now())
  updatedDate       DateTime    @updatedAt
  price             Int
  unitSize          Int         @default(0)

  @@id([medServiceId, userId])
}