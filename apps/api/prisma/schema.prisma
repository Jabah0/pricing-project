generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int @default(autoincrement()) @id
  password          String
  username          String @unique
  createDate        DateTime @default(now())
  updateDate        DateTime @updatedAt
  lastLogin         DateTime?
  hashRefreshToken  String
  medServices UserMedServies[]
}

model MedService {
  id                String @id
  name              String
  dalilName         String
  code              String
  nationalCode      String
  price             Float
  unitSize          Int
  numberOfPricing   Int
}

model UserMedServies {
  userId        Int
  user          User  @relation(fields: [userId], references: [id])
  medServcieId  Int  
  createDate        DateTime @default(now())
  updateDate        DateTime @updatedAt

  @@id([userId, medServcieId])
}